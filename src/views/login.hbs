    <link rel="stylesheet" href="/assets/css/navbar.css">
</head>

<body>
    <!-- ======================= Nav =============================== -->
    <div class="container-fluid nav-bg">
        <div class="container justify-content-between">
          <div class="row nav-bg py-2">
            <div class="col-1 d-flex align-items-center justify-content-center">
              <img
                src="assets/iconNlogo/dumbwaysputih.png"
                width="50"
                height="35"
                alt=""
              />
            </div>
            <div class="col-10 p-0 d-flex justify-content-between pe-2">
              <ul class="gap-4 h-100 d-md-flex align-items-center d-none">
                <a href="/"><li class="">Home</li></a>
                <a href="/blog"><li class="">AddProject</li></a>
                <a href=""><li class="">Testimonial</li></a>
                <a href=""><li class="">Testimonial</li></a>
                <a href="/blog/halo"><li class="">AllTask</li></a>
              </ul>
              <ul class="gap-4 h-100 d-md-flex align-items-center d-none">
                <a href="/"><li class="">Register</li></a>
                <a href="/blog"><li class="active-nav">Login</li></a>
              </ul>
            </div>
            <div class="col-1 d-flex align-items-center">
              <i
                class="fa-solid fa-hamburger d-md-none fs-2"
                onclick="togOpen()"
              ></i>
              <button class="btn d-md-flex d-none btn-bg px-4 shadow">
                Contact
              </button>
            </div>
          </div>
        </div>
      </div>
      <div class="nav-sub-bg text-center d-md-none none" id="togle">
        <ul class="d-flex text-center flex-column p-0 m-0">
          <a href="" class="py-2 white m-2"><li>Home</li></a>
          <a href="" class="py-2 white m-2"><li>Add Project</li></a>
          <a href="" class="py-2 white m-2"><li>Testimonial</li></a>
          <a href="" class="py-2 white m-2"><li>All Task</li></a>
        </ul>
        <i class="fa-solid fa-arrow-up fs-2 my-2" onclick="togClose()"></i>
      </div>
    <!-- ======================= EndNav =============================== -->
    <div class="body d-flex justify-content-center align-items-center">
    <div class="col-md-7 body d-flex flex-column p-0 m-0 align-items-center" id="addProject">
        <form class="col-lg-8" action="/blog" method="post">
            <h1 class="text-center mt-md-5 mt-3">Task 15</h1>
            <h2 class="text-center">LOGIN</h2>
            <div class="name-conten mt-3">
                <span class="">Email</span>
                <input type="text" name="email" class="container p-0 ps-1 mt-2" style="height: 30px;">
            </div>
            <div class="name-conten mt-3">
                <span class="">Password</span>
                <input type="password" name="password" class="container p-0 ps-1 mt-2" style="height: 30px;">
            </div>
            <div class="d-flex justify-content-md-between flex-md-row flex-column mt-2 text-center">
                <span class="mt-2">Don't have an account?<a href="/register" class="ms-2 fw-bold text-primary">Register</a></span>
                <div class="d-flex justify-content-center mt-2">
                <button class="btn btn-dark" type="submit">Log in</button>
                </div>
            </div>
            
        </form>
    </div>
    </div>
    <div class="body silver h-auto pb-3" id="myProject">
        <h1 class="text-center pt-2">MY PROJECT</h1>
        <a class="ms-2" href="#addProject"><i class="fa-solid fa-arrow-up fs-1"></i></i></a>
        <div class="d-flex justify-content-center flex-wrap container gap-4" id="conten-blog">
            <!-- ============ ContenPush ================ -->
            {{#each dataBlog}}
            <div class="w-auto px-3 pt-3 pb-2 bg-white rounded-2 shadow">
                <!-- ============ image ================ -->
                <div class="d-flex justify-content-center">
                    <img src="assets/image/Task 2.PNG" width="350" height="250" alt="">
                </div>
                <!-- ============ data-blog ================ -->
                <div class="data-blog">
                    <!-- ============ title ================ -->
                    <div class="mt-1 fw-bold" style="width: 350px;">
                        <a href="blogDetail/{{@index}}"><span>{{projectName}}</span></a>
                        
                    </div>
                    <div class="fs-6">
                        <!-- <span>durasi : ${blogAdd[index].durasi}</span> -->
                        <span style="color: silver; line-height: none;">durasi : {{durasi}}</span>
                    </div>
                    <!-- ============ article ================ -->
                    <div class="row m-0 my-2" >
                        <span class="p-0 overflow-auto pe-2" style="width: 350px; height: 100px; text-align: justify;">{{description}}</span>
                    </div>
                    <!-- ============ icon ================ -->
                    <div class="fs-1 d-flex gap-3 justify-content-center flex-column" style="height: 110px;">
                        <div class="d-flex gap-4 justify-content-center">
                            {{#each tech}}
                            <i class="fa-brands fa-{{this}}"></i>
                            {{/each}}
                        </div>
                        <div class="d-flex gap-4 justify-content-center">
                            {{#each tech1}}
                            <i class="fa-brands fa-{{this}}"></i>
                            {{/each}}
                        </div>
                    </div>
                    <!-- ============ button ================ -->
                    <div class="row mt-2 px-3 py-1 gap-2 ">
                        <a href="editDetail/{{@index}}" class="col text-center bg-dark rounded-2 text-white">Edit</a>
                        <a href="delete/{{@index}}" class="col text-center bg-dark rounded-2 text-white">Delete</a>
                    </div>
                </div>
                <!-- ======================================== -->
            </div>
            {{/each}}
        </div>
    </div>
    </body>
<style>
    .body {
        height: 100vh;
    }

    .silver {
        background-color: silver
    }

    .image::-webkit-file-upload-button {
        border: none;
        width: 100px;
        background-color: silver;
        border-radius: 5px;
        margin: 0;
        padding: 5px;
        cursor: pointer;
        margin-right: 10px;
    }
    .image::-webkit-file-upload-button:hover{
        color: white;
    }
    
    .uploud:hover {
        cursor: pointer;
    }

</style>
</script>
